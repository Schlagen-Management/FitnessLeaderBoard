@page
@model FitnessLeaderBoard.Pages.UserProfileModel
@{
}

<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row">
    <div class="col">
        <div class="text-center">
            <img src=@Model.Input.ImageLink alt="Avatar"
                 class="md-avatar rounded-circle size-4" style="display:inline-flex;">
        </div>
        <form id="profile-form" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="Input.FullName"></label>
                <input asp-for="Input.FullName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Input.DisplayName"></label>
                <input asp-for="Input.DisplayName" class="form-control" />
            </div>
            <button id="update-profile-button" type="submit" class="btn btn-primary btn-sm">Save</button>
            <button class="btn btn-link" type="submit" asp-route-isCancel="true">Cancel</button>
        </form>
    </div>
</div>
<div class="text-center mt-2 privacy-tos"><a href="~/Privacy" class="btn btn-link">Privacy Policy</a> | <a href="~/ToS" class="btn btn-link">Terms of Service</a></div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
