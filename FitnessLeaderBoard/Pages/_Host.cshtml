    <script src="js/jquery/jquery.slim.min.js"></script>
    <script src="js/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="_framework/blazor.server.js"></script>

    <script>function cycleImages() {
            var $active = $('#cycler .active');
            var $next = ($active.next().length > 0) ? $active.next() : $('#cycler img:first');

            //move the next image up the pile
            $next.css('z-index', 2);

            //fade out the top image
            $active.fadeOut(700, function () {

                //reset the z-index and unhide the image
                $active.css('z-index', 1).show().removeClass('active');

                //make the next image the top one
                $next.css('z-index', 3).addClass('active');
            });
        }

        $(document).ready(function () {

            // run every 5s
            setInterval('cycleImages()', 5000);
        })</script>

